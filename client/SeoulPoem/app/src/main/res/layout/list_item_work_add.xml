<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <!--왼쪽 이미지-->
    <LinearLayout
        android:id="@+id/llLeftImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/ivLeftImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/testimg02" />
    </LinearLayout>


    <!--동그란 이미지-->
    <LinearLayout
        android:id="@+id/llTItle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/llLeftImg"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/llLeftImg">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCirclerImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/testimg05" />
    </LinearLayout>

    <!--제목-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/llLeftImg"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/llTItle">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="test title" />
    </LinearLayout>

    <!--내용-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/llTItle"
        android:layout_below="@+id/llTItle"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/llLeftImg">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="test content" />
    </LinearLayout>


</RelativeLayout>