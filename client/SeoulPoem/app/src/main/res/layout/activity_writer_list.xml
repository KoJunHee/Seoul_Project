<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seoulprojet.seoulpoem.activity.WriterList">
    
    <android.support.v4.widget.DrawerLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/writerlist_drawer_layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="10">


            <!-- 상단바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="햄버거"
                    android:id="@+id/writerlist_hamburger_btn" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="작가 목록"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"/>

            </LinearLayout>

            <!-- middle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/writerlist_rv"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <!-- 작가신청하기 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center">

                <Button
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="작가 신청하기"
                    android:id="@+id/writerlist_apply_btn"/>

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/hamburger_drawer"></include>

    </android.support.v4.widget.DrawerLayout>

</android.support.constraint.ConstraintLayout>
